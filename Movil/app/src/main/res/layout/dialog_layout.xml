<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccionar una opciÃ³n:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/buttonSocio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/imput_dashboard"
        app:backgroundTint="@null"
        android:layout_margin="10dp"
        android:drawableLeft="@drawable/_cono1"
        android:drawablePadding="8dp"
        android:padding="16dp"
        android:gravity="center_vertical|center|bottom"
        android:text="Socio"/>


    <Button
        android:id="@+id/buttonEntrenador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_clase"
        app:backgroundTint="@null"
        android:layout_margin="10dp"
        android:drawableLeft="@drawable/icono_sociosdash"
        android:gravity="center_vertical|center|bottom"
        android:text="Entrenador"/>

    <Button
        android:id="@+id/buttonClase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/imput_card_entrenador"
        app:backgroundTint="@null"
        android:layout_margin="10dp"
        android:drawableLeft="@drawable/baseline_fitness_center_24"
        android:gravity="center_vertical|center|bottom"
        android:text="Clase"/>

</LinearLayout>